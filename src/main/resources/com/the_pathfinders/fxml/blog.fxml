<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.the_pathfinders.BlogController"
      spacing="12" alignment="TOP_CENTER"
      stylesheets="/com/the_pathfinders/css/blog.css">

    <!-- Header -->
    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 16 30 0 30;">
        <Button fx:id="backBtn" text="â†" styleClass="back-arrow" />
        <Label fx:id="pageTitle" text="Find Your Calm ðŸŒ¿" styleClass="page-title" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchBar" promptText="Search something peaceful..." styleClass="search-bar" prefWidth="220" />
    </HBox>

    <!-- Categories -->
    <ScrollPane fx:id="scrollPane"
                fitToWidth="true"
                vbarPolicy="AS_NEEDED"
                hbarPolicy="NEVER"
                VBox.vgrow="ALWAYS"
                pannable="true"
                style="-fx-background-color: transparent; -fx-background: transparent;">
        <FlowPane fx:id="categoriesPane"
                  hgap="12" vgap="12"
                  alignment="CENTER"
                  prefWrapLength="750"
                  style="-fx-padding: 20 25 20 25;" />
    </ScrollPane>
    <!-- Posts -->
    <ListView fx:id="postsListView" VBox.vgrow="ALWAYS" styleClass="post-list" />
</VBox>
