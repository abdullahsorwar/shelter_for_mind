<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.the_pathfinders.BlogController"
      spacing="0" alignment="TOP_CENTER"
      stylesheets="/com/the_pathfinders/css/blog.css"
      prefWidth="1200" prefHeight="700" maxWidth="Infinity" maxHeight="Infinity">

    <!-- Header -->
    <HBox spacing="6" alignment="CENTER" styleClass="header-bar" minHeight="50" maxHeight="50">
        <Button fx:id="backBtn" text="â¬… Back" styleClass="back-arrow" 
                style="-fx-font-size: 12px; -fx-padding: 5 10; -fx-background-color: #667eea; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 6; -fx-font-weight: 600;" />
        <Label fx:id="pageTitle" text="Mental Wellness Library ðŸ§ " styleClass="page-title" 
               style="-fx-font-size: 18px; -fx-font-weight: 600;" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchBar" promptText="Search articles..." styleClass="search-bar" prefWidth="240" maxWidth="240" />
    </HBox>

    <!-- Main Content Area -->
    <HBox VBox.vgrow="ALWAYS" spacing="0" style="-fx-background-color: #f8f9fb;">
        
        <!-- Left: Categorized Content -->
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    vbarPolicy="AS_NEEDED"
                    hbarPolicy="NEVER"
                    HBox.hgrow="ALWAYS"
                    pannable="true"
                    styleClass="main-scroll">
            <VBox fx:id="categoriesContainer" spacing="20" style="-fx-padding: 20 25 20 25;" />
        </ScrollPane>

        <!-- Right: Side Panel with Quick Actions & Filters -->
        <VBox fx:id="sidePanel" prefWidth="240" minWidth="240" maxWidth="240" 
              spacing="12" styleClass="side-panel">
            
            <!-- Quick Actions Section -->
            <VBox spacing="8" styleClass="panel-section">
                <Label text="âš¡ Quick Actions" styleClass="panel-heading" />
                
                <Button fx:id="shuffleBtn" text="ðŸŽ² Topic Shuffle" 
                        styleClass="action-button" maxWidth="Infinity" 
                        style="-fx-font-size: 11px; -fx-padding: 8 10;" />
                        
                <Button fx:id="listenModeBtn" text="ðŸŽ§ Listen (TTS)" 
                        styleClass="action-button" maxWidth="Infinity" 
                        style="-fx-font-size: 11px; -fx-padding: 8 10;" />
                        
                <Button fx:id="expertPickBtn" text="â­ Expert Picks" 
                        styleClass="action-button" maxWidth="Infinity" 
                        style="-fx-font-size: 11px; -fx-padding: 8 10;" />
            </VBox>
            
            <Separator />
            
            <!-- Simplified Filters Section -->
            <VBox spacing="6" styleClass="panel-section">
                <Label text="ðŸ” Filters" styleClass="panel-heading" />
                
                <Label text="By Section" style="-fx-font-size: 10px; -fx-text-fill: #666;" />
                <ComboBox fx:id="sectionFilter" promptText="All Sections" 
                          styleClass="filter-combo" maxWidth="Infinity" 
                          style="-fx-font-size: 11px; -fx-padding: 6 10;" />
                
                <Label text="Reading Length" style="-fx-font-size: 10px; -fx-text-fill: #666;" />
                <ComboBox fx:id="lengthFilter" promptText="Any Length" 
                          styleClass="filter-combo" maxWidth="Infinity" 
                          style="-fx-font-size: 11px; -fx-padding: 6 10;" />
                
                <Button fx:id="clearFiltersBtn" text="Clear Filters" 
                        styleClass="clear-filters-btn" maxWidth="Infinity" 
                        style="-fx-font-size: 11px; -fx-padding: 6 10;" />
            </VBox>
            
            <Separator />
            
            <!-- Reading Progress Section -->
            <VBox spacing="6" styleClass="panel-section">
                <Label text="ðŸ“š Progress" styleClass="panel-heading" />
                <Label fx:id="progressLabel" text="0 read today" 
                       style="-fx-font-size: 11px; -fx-text-fill: #555;" wrapText="true" />
                <Button fx:id="viewHistoryBtn" text="ðŸ“… History" 
                        styleClass="action-button" maxWidth="Infinity" 
                        style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2); -fx-font-size: 11px; -fx-padding: 8 10;" />
            </VBox>
            
            <Separator />
            
            <!-- Quick Access Bookmarks -->
            <VBox spacing="6" styleClass="panel-section">
                <Label text="â­ Saved" styleClass="panel-heading" />
                <Label fx:id="savedCountLabel" text="0 saved" 
                       style="-fx-font-size: 11px; -fx-text-fill: #555;" wrapText="true" />
                <Button fx:id="viewSavedBtn" text="ðŸ’¾ View Saved" 
                        styleClass="action-button" maxWidth="Infinity" 
                        style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2); -fx-font-size: 11px; -fx-padding: 8 10;" />
            </VBox>
            
            <Separator />
            
            <!-- Stats Section -->
            <VBox spacing="8" styleClass="panel-section">
                <Label text="ðŸ“Š Your Reading" styleClass="panel-heading" />
                <Label fx:id="statsLabel" text="36 articles available" 
                       style="-fx-font-size: 12px; -fx-text-fill: #777;" wrapText="true" />
            </VBox>
        </VBox>
    </HBox>
</VBox>
