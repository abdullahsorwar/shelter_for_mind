<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.the_pathfinders.BlogController"
      spacing="0" alignment="TOP_CENTER"
      stylesheets="/com/the_pathfinders/css/blog.css"
      minWidth="600" minHeight="400" maxWidth="Infinity" maxHeight="Infinity">

    <!-- Header -->
    <HBox spacing="8" alignment="CENTER_LEFT" styleClass="header-bar" minHeight="50" maxHeight="50">
        <Button fx:id="backBtn" text="â¬…" styleClass="back-arrow" minWidth="40" maxWidth="60"
                style="-fx-font-size: 12px; -fx-padding: 5 10; -fx-background-color: #667eea; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 6; -fx-font-weight: 600;" />
        <Label fx:id="pageTitle" text="Mental Wellness ðŸ§ " styleClass="page-title" 
               style="-fx-font-size: 14px; -fx-font-weight: 600;" wrapText="false" minWidth="100" maxWidth="200" />
        <Region HBox.hgrow="ALWAYS" minWidth="10" />
    </HBox>

    <!-- Main Content Area -->
    <HBox VBox.vgrow="ALWAYS" spacing="0" style="-fx-background-color: #f8f9fb;">
        
        <!-- Left: Categorized Content -->
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    vbarPolicy="AS_NEEDED"
                    hbarPolicy="NEVER"
                    HBox.hgrow="ALWAYS"
                    pannable="true"
                    styleClass="main-scroll">
            <VBox fx:id="categoriesContainer" spacing="15" style="-fx-padding: 15 12 15 12;" />
        </ScrollPane>

        <!-- Right: Side Panel with Quick Actions & Filters -->
        <VBox fx:id="sidePanel" prefWidth="220" minWidth="180" maxWidth="240" 
              spacing="10" styleClass="side-panel">
            
            <!-- Quick Actions Section -->
            <VBox spacing="6" styleClass="panel-section">
                <Label text="âš¡ Actions" styleClass="panel-heading" wrapText="true" />
                
                <Button fx:id="shuffleBtn" text="ðŸŽ² Shuffle" 
                        styleClass="action-button" maxWidth="Infinity" minWidth="120"
                        style="-fx-font-size: 10px; -fx-padding: 6 8;" wrapText="true" />
                        
                <Button fx:id="listenModeBtn" text="ðŸŽ§ Listen" 
                        styleClass="action-button" maxWidth="Infinity" minWidth="120"
                        style="-fx-font-size: 10px; -fx-padding: 6 8;" wrapText="true" />
                        
                <Button fx:id="expertPickBtn" text="â­ Picks" 
                        styleClass="action-button" maxWidth="Infinity" minWidth="120"
                        style="-fx-font-size: 10px; -fx-padding: 6 8;" wrapText="true" />
            </VBox>
            
            <Separator />
            
            <!-- Simplified Filters Section -->
            <VBox spacing="5" styleClass="panel-section">
                <Label text="ðŸ” Filters" styleClass="panel-heading" wrapText="true" />
                
                <Label text="Section" style="-fx-font-size: 9px; -fx-text-fill: #666;" wrapText="true" />
                <ComboBox fx:id="sectionFilter" promptText="All" 
                          styleClass="filter-combo" maxWidth="Infinity" minWidth="120"
                          style="-fx-font-size: 10px; -fx-padding: 5 8;" />
                
                <Label text="Length" style="-fx-font-size: 9px; -fx-text-fill: #666;" wrapText="true" />
                <ComboBox fx:id="lengthFilter" promptText="Any" 
                          styleClass="filter-combo" maxWidth="Infinity" minWidth="120"
                          style="-fx-font-size: 10px; -fx-padding: 5 8;" />
                
                <Button fx:id="clearFiltersBtn" text="Clear" 
                        styleClass="clear-filters-btn" maxWidth="Infinity" minWidth="120"
                        style="-fx-font-size: 10px; -fx-padding: 5 8;" wrapText="true" />
            </VBox>
            
            <Separator />
            
            <!-- Reading Progress Section -->
            <VBox spacing="5" styleClass="panel-section">
                <Label text="ðŸ“š Progress" styleClass="panel-heading" wrapText="true" />
                <Label fx:id="progressLabel" text="0 read today" 
                       style="-fx-font-size: 10px; -fx-text-fill: #555;" wrapText="true" />
                <Button fx:id="viewHistoryBtn" text="ðŸ“… History" 
                        styleClass="action-button" maxWidth="Infinity" minWidth="120"
                        style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2); -fx-font-size: 10px; -fx-padding: 6 8;" wrapText="true" />
            </VBox>
            
            <Separator />
            
            <!-- Quick Access Bookmarks -->
            <VBox spacing="5" styleClass="panel-section">
                <Label text="â­ Saved" styleClass="panel-heading" wrapText="true" />
                <Label fx:id="savedCountLabel" text="0 saved" 
                       style="-fx-font-size: 10px; -fx-text-fill: #555;" wrapText="true" />
                <Button fx:id="viewSavedBtn" text="ðŸ’¾ Saved" 
                        styleClass="action-button" maxWidth="Infinity" minWidth="120"
                        style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2); -fx-font-size: 10px; -fx-padding: 6 8;" wrapText="true" />
            </VBox>
            
            <Separator />
            
            <!-- Stats Section -->
            <VBox spacing="5" styleClass="panel-section">
                <Label text="ðŸ“Š Reading" styleClass="panel-heading" wrapText="true" />
                <Label fx:id="statsLabel" text="36 articles available" 
                       style="-fx-font-size: 10px; -fx-text-fill: #777;" wrapText="true" />
            </VBox>
        </VBox>
    </HBox>
</VBox>
