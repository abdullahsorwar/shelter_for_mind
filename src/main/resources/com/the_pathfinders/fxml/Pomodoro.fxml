<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.the_pathfinders.PomodoroController"
           prefWidth="900" prefHeight="600"
           styleClass="pomodoro-root"
           stylesheets="@/com/the_pathfinders/css/pomodoro.css">

    <BorderPane>
        
        <!-- Top Section -->
        <top>
            <VBox spacing="15" alignment="TOP_CENTER" styleClass="top-section">
                <padding>
                    <Insets top="20" left="20" right="20" bottom="10"/>
                </padding>

                <!-- Back Button -->
                <HBox alignment="TOP_LEFT">
                    <Button fx:id="backBtn" text="â† Back" styleClass="back-btn"/>
                </HBox>

                <!-- Title -->
                <Label text="ðŸ… Pomodoro Timer ðŸ…" styleClass="pomodoro-title"/>
                <Label fx:id="phaseLabel" text="ðŸ… READY" styleClass="phase-label"/>
            </VBox>
        </top>

        <!-- Center Section - Horizontal Layout: Timer Left, Controls Right -->
        <center>
            <HBox spacing="40" alignment="CENTER" styleClass="center-section">
                <padding>
                    <Insets top="20" left="40" right="40" bottom="20"/>
                </padding>
                
                <!-- Left Side: Timer Circle -->
                <VBox spacing="20" alignment="CENTER" prefWidth="400">
                    <!-- Timer Circle with Progress -->
                    <StackPane>
                        <ProgressIndicator fx:id="progressCircle" 
                                         progress="0" 
                                         prefWidth="280" 
                                         prefHeight="280"
                                         styleClass="progress-circle"/>
                        
                        <VBox alignment="CENTER" spacing="10">
                            <Circle fx:id="tomatoCircle" radius="70" styleClass="tomato-circle"/>
                            <Label fx:id="timerLabel" text="25:00" styleClass="timer-label"/>
                        </VBox>
                    </StackPane>

                    <!-- Session Count -->
                    <Label fx:id="sessionCountLabel" text="Pomodoros: 0" styleClass="session-count"/>
                    
                    <!-- Motivation Label -->
                    <Label fx:id="motivationLabel" 
                           text="Ready to start your focused session? ðŸ…"
                           wrapText="true"
                           maxWidth="400"
                           alignment="CENTER"
                           styleClass="motivation-label"/>
                </VBox>

                <!-- Right Side: Control Buttons -->
                <VBox spacing="25" alignment="CENTER" prefWidth="400">
                    
                    <!-- Duration Settings -->
                    <VBox spacing="18" alignment="CENTER">
                        <HBox spacing="15" alignment="CENTER">
                            <VBox spacing="8" alignment="CENTER">
                                <Label text="Work (min)" styleClass="setting-label"/>
                                <ComboBox fx:id="workDurationCombo" prefWidth="90" styleClass="duration-combo"/>
                            </VBox>
                            
                            <VBox spacing="8" alignment="CENTER">
                                <Label text="Short Break" styleClass="setting-label"/>
                                <ComboBox fx:id="shortBreakCombo" prefWidth="90" styleClass="duration-combo"/>
                            </VBox>
                        </HBox>
                        
                        <HBox spacing="15" alignment="CENTER">
                            <VBox spacing="8" alignment="CENTER">
                                <Label text="Long Break" styleClass="setting-label"/>
                                <ComboBox fx:id="longBreakCombo" prefWidth="90" styleClass="duration-combo"/>
                            </VBox>
                            
                            <VBox spacing="8" alignment="CENTER">
                                <Label text="Theme" styleClass="setting-label"/>
                                <ComboBox fx:id="themeCombo" prefWidth="120" styleClass="duration-combo"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Control Buttons Stacked Vertically -->
                    <VBox spacing="15" alignment="CENTER">
                        <Button fx:id="startBtn" text="â–¶ Start" prefWidth="220" prefHeight="50" styleClass="control-btn start-btn"/>
                        <Button fx:id="pauseBtn" text="â¸ Pause" prefWidth="220" prefHeight="50" styleClass="control-btn pause-btn"/>
                        <Button fx:id="resetBtn" text="â†» Reset" prefWidth="220" prefHeight="50" styleClass="control-btn reset-btn"/>
                        <Button fx:id="skipBtn" text="â­ Skip Phase" prefWidth="220" prefHeight="50" styleClass="control-btn skip-btn"/>
                    </VBox>
                    
                </VBox>
                
            </HBox>
        </center>

        <!-- Bottom Section - Removed, moved to center -->
        <bottom>
        </bottom>

    </BorderPane>

</StackPane>
