<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" prefHeight="600.0" prefWidth="800.0" spacing="10.0" styleClass="root-container" stylesheets="@../css/public_journals.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.the_pathfinders.PrivateJournalsController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <!-- Header: back + title + add -->
   <HBox alignment="CENTER_LEFT" spacing="12.0">
      <Button fx:id="backBtn" styleClass="back-button" text="â† Back" />
      <Label styleClass="page-title" text="My Journals" />
      <VBox HBox.hgrow="ALWAYS" />
      <Button fx:id="addBtn" styleClass="primary-btn" text="+ New" />
   </HBox>

   <!-- Scrollable journals container -->
   <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
      <content>
         <VBox fx:id="journalsContainer" spacing="15.0" styleClass="journals-container">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </VBox>
      </content>
   </ScrollPane>
</VBox>
