<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<Pane fx:id="root" prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: black;" stylesheets="@../css/password_reset.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.the_pathfinders.PasswordResetController">
   <children>
      <!-- Background with gradient (bottom layer) -->
      <Pane fx:id="backgroundPane" prefHeight="600.0" prefWidth="1000.0" mouseTransparent="true">
         <children>
            <Rectangle fx:id="gradientRect" arcHeight="0.0" arcWidth="0.0" height="600.0" width="1000.0" />
         </children>
      </Pane>

      <!-- Content centered -->
      <Pane fx:id="contentPane" layoutX="200.0" layoutY="0.0" prefHeight="600.0" prefWidth="600.0">
         <children>
            <!-- Main card with rounded corners -->
            <Pane fx:id="mainCard" layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="600.0" styleClass="admin-card">
               <children>
                  <!-- Fixed Top: Title -->
                  <Text fx:id="resetTitle" fill="#FF7B7B" layoutX="150.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Reset Password" textAlignment="CENTER">
                     <font><Font name="System Bold" size="36.0" /></font>
                  </Text>

                  <!-- Dynamic Center: Input Fields -->
                  <VBox fx:id="centerContent" alignment="CENTER" layoutX="90.0" layoutY="150.0" prefHeight="300.0" prefWidth="420.0" spacing="20.0">
                     <children>
                        <!-- New Password field -->
                        <Pane prefHeight="50.0" prefWidth="420.0" styleClass="input-field-container">
                           <children>
                              <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="15.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
                                 <image><Image url="@../../../assets/icons/password.png" /></image>
                              </ImageView>
                              <PasswordField fx:id="newPasswordField" layoutX="45.0" layoutY="5.0" prefHeight="40.0" prefWidth="365.0" promptText="New Password" visible="true">
                                 <font><Font size="14.0" /></font>
                              </PasswordField>
                              <TextField fx:id="newPasswordVisibleField" layoutX="45.0" layoutY="5.0" prefHeight="40.0" prefWidth="365.0" promptText="New Password" visible="false">
                                 <font><Font size="14.0" /></font>
                              </TextField>
                           </children>
                        </Pane>

                        <!-- Confirm Password field -->
                        <Pane prefHeight="50.0" prefWidth="420.0" styleClass="input-field-container">
                           <children>
                              <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="15.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
                                 <image><Image url="@../../../assets/icons/password.png" /></image>
                              </ImageView>
                              <PasswordField fx:id="confirmPasswordField" layoutX="45.0" layoutY="5.0" prefHeight="40.0" prefWidth="365.0" promptText="Confirm Password" visible="true">
                                 <font><Font size="14.0" /></font>
                              </PasswordField>
                              <TextField fx:id="confirmPasswordVisibleField" layoutX="45.0" layoutY="5.0" prefHeight="40.0" prefWidth="365.0" promptText="Confirm Password" visible="false">
                                 <font><Font size="14.0" /></font>
                              </TextField>
                           </children>
                        </Pane>

                        <!-- Show Password Checkbox -->
                        <CheckBox fx:id="showPasswordCheckbox" onAction="#handleShowPassword" text="Show Password">
                           <font><Font size="12.0" /></font>
                        </CheckBox>
                     </children>
                  </VBox>

                  <!-- Fixed Bottom: Reset Button and Links -->
                  <VBox alignment="CENTER" layoutX="90.0" layoutY="480.0" prefHeight="100.0" prefWidth="420.0" spacing="15.0">
                     <children>
                        <!-- Reset Button -->
                        <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleResetPassword" prefHeight="45.0" prefWidth="420.0" style="-fx-background-radius: 25; -fx-cursor: hand; -fx-font-size: 16px; -fx-font-weight: bold;" text="RESET PASSWORD" textFill="WHITE" />

                        <!-- Back to Login Link -->
                        <Hyperlink fx:id="backToLoginLink" onAction="#handleBackToLogin" style="-fx-text-fill: #A0B0C0; -fx-cursor: hand;" text="Back to Login" underline="true">
                           <font><Font size="11.0" /></font>
                        </Hyperlink>
                     </children>
                  </VBox>
               </children>
            </Pane>
         </children>
      </Pane>

      <!-- Logo - Top Left (top layer) -->
      <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="20.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
         <image><Image url="@../../../assets/images/logo.png" /></image>
      </ImageView>

      <!-- Light/Dark Mode Toggle - Top Right Corner (top layer) -->
      <Button fx:id="themeToggleButton" layoutX="920.0" layoutY="20.0" mnemonicParsing="false" onAction="#handleThemeToggle" prefHeight="45.0" prefWidth="65.0" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 22; -fx-cursor: hand; -fx-border-color: rgba(255, 255, 255, 0.4); -fx-border-radius: 22; -fx-border-width: 1;" text="â˜€" textFill="WHITE">
         <font><Font size="22.0" /></font>
      </Button>
   </children>
</Pane>
