<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<Pane fx:id="root" prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.the_pathfinders.AdminLoginController">
   <children>
      <!-- Background with gradient (bottom layer) -->
      <Pane fx:id="backgroundPane" prefHeight="600.0" prefWidth="1000.0" mouseTransparent="true">
         <children>
            <Rectangle fx:id="gradientRect" arcHeight="0.0" arcWidth="0.0" height="600.0" width="1000.0" />
         </children>
      </Pane>

      <!-- Content centered -->
      <Pane fx:id="contentPane" layoutX="200.0" layoutY="0.0" prefHeight="600.0" prefWidth="600.0">
         <children>
            <!-- Main card with rounded corners -->
            <Pane fx:id="mainCard" layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="600.0" styleClass="admin-card">
               <children>
                  <!-- Fixed Top: Title -->
                  <Text fx:id="loginTitle" fill="#FF7B7B" layoutX="150.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome, Keeper!" textAlignment="CENTER">
                     <font><Font name="System Bold" size="36.0" /></font>
                  </Text>

                  <!-- Dynamic Center: Input Fields -->
                  <VBox fx:id="centerContent" alignment="CENTER" layoutX="90.0" layoutY="150.0" prefHeight="300.0" prefWidth="420.0" spacing="20.0">
                     <children>
                        <!-- Email field (for signup mode) -->
                        <Pane fx:id="emailFieldPane" prefHeight="50.0" prefWidth="420.0" styleClass="input-field-container" visible="false" managed="false">
                           <children>
                              <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="15.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
                                 <image><Image url="@../../../assets/icons/email.png" /></image>
                              </ImageView>
                              <TextField fx:id="emailField" layoutX="45.0" layoutY="5.0" prefHeight="40.0" prefWidth="365.0" promptText="email">
                                 <font><Font size="14.0" /></font>
                              </TextField>
                           </children>
                        </Pane>

                        <!-- Keeper ID field -->
                        <Pane prefHeight="50.0" prefWidth="420.0" styleClass="input-field-container">
                           <children>
                              <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="15.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
                                 <image><Image url="@../../../assets/icons/username.png" /></image>
                              </ImageView>
                              <TextField fx:id="keeperIdField" layoutX="45.0" layoutY="5.0" prefHeight="40.0" prefWidth="365.0" promptText="keeper_id">
                                 <font><Font size="14.0" /></font>
                              </TextField>
                           </children>
                        </Pane>

                        <!-- Password field -->
                        <Pane prefHeight="50.0" prefWidth="420.0" styleClass="input-field-container">
                           <children>
                              <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="15.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
                                 <image><Image url="@../../../assets/icons/password.png" /></image>
                              </ImageView>
                              <PasswordField fx:id="keeperPasswordField" layoutX="45.0" layoutY="5.0" prefHeight="40.0" prefWidth="365.0" promptText="keeper_pass" visible="true">
                                 <font><Font size="14.0" /></font>
                              </PasswordField>
                              <TextField fx:id="keeperPasswordVisibleField" layoutX="45.0" layoutY="5.0" prefHeight="40.0" prefWidth="365.0" promptText="keeper_pass" visible="false">
                                 <font><Font size="14.0" /></font>
                              </TextField>
                           </children>
                        </Pane>

                        <!-- Show Password Checkbox -->
                        <CheckBox fx:id="showPasswordCheckbox" onAction="#handleShowPassword" text="Show Password">
                           <font><Font size="12.0" /></font>
                        </CheckBox>
                     </children>
                  </VBox>

                  <!-- Fixed Bottom: Login Button and Links -->
                  <VBox alignment="CENTER" layoutX="90.0" layoutY="480.0" prefHeight="100.0" prefWidth="420.0" spacing="15.0">
                     <children>
                        <!-- Login Button -->
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefHeight="45.0" prefWidth="420.0" style="-fx-background-radius: 25; -fx-cursor: hand; -fx-font-size: 16px; -fx-font-weight: bold;" text="LOGIN" textFill="WHITE" />

                        <!-- Links Container -->
                        <HBox fx:id="linksContainer" alignment="CENTER" prefHeight="30.0" prefWidth="420.0" spacing="5.0">
                           <children>
                              <!-- Login Mode Links -->
                              <Hyperlink fx:id="forgotPasswordLink" onAction="#handleForgotPassword" style="-fx-text-fill: #A0B0C0; -fx-cursor: hand;" text="Forget Password?" underline="true" visible="true" managed="true">
                                 <font><Font size="11.0" /></font>
                              </Hyperlink>
                              <Hyperlink fx:id="createAccountLink" onAction="#handleCreateAccount" style="-fx-text-fill: #A0B0C0; -fx-cursor: hand;" text="Create account" underline="true" visible="true" managed="true">
                                 <font><Font size="11.0" /></font>
                              </Hyperlink>
                              
                              <!-- Signup Mode Link -->
                              <HBox fx:id="loginModeLink" alignment="CENTER" spacing="0" visible="false" managed="false">
                                 <children>
                                    <Label text="Already have an account? " style="-fx-text-fill: #A0B0C0;">
                                       <font><Font size="11.0" /></font>
                                    </Label>
                                    <Hyperlink fx:id="backToLoginLink" onAction="#handleBackToLogin" style="-fx-text-fill: #FF7B7B; -fx-cursor: hand;" text="Log in" underline="true">
                                       <font><Font size="11.0" /></font>
                                    </Hyperlink>
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </Pane>
         </children>
      </Pane>

      <!-- Logo - Top Left (top layer) -->
      <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="20.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
         <image><Image url="@../../../assets/images/logo.png" /></image>
      </ImageView>

      <!-- Light/Dark Mode Toggle - Top Right Corner (top layer) -->
      <Button fx:id="themeToggleButton" layoutX="920.0" layoutY="20.0" mnemonicParsing="false" onAction="#handleThemeToggle" prefHeight="45.0" prefWidth="65.0" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 22; -fx-cursor: hand; -fx-border-color: rgba(255, 255, 255, 0.4); -fx-border-radius: 22; -fx-border-width: 1;" text="â˜€" textFill="WHITE">
         <font><Font size="22.0" /></font>
      </Button>
   </children>
</Pane>
